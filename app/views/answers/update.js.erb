<% if @answer.links.any?(&:gist?) %>
  window.location.reload(false);  // fix partial view of question script
<% else %>
  <% if @answer.errors.blank? %>
    $('#answer-<%= @answer.id %>').replaceWith('<%= j render @answer %>');
  <% else %>
    $('#answer-<%= @answer.id %>-errors').html('<%= j render 'shared/short_errors', resource: @answer %>');
  <% end %>
<% end %>
