<% if @question.links.any?(&:gist?) %>
  window.location.reload(false); // fix partial view of question script
<% else %>
  <% if @question.errors.blank? %>
    $("#question-<%= @question.id %>").replaceWith('<%= j render @question %>');
  <% else %>
    $('#question-<%= @question.id %>-errors').html('<%= j render 'shared/errors', resource: @question %>');
  <% end %>
<% end %>
